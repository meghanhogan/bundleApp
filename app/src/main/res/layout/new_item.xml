<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/bundle_new_items_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="@string/bundle"/>

    <Button
        android:id="@+id/another_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawable="@drawable/add_icon"
        android:layout_below="@+id/status_selector"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <EditText
        android:id="@+id/new_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="@string/new_item_name_hint"
        android:textAlignment="center"
        android:layout_alignParentTop="true" />

    <EditText
        android:id="@+id/new_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="@string/new_item_price_hint"
        android:textAlignment="center"
        android:layout_below="@+id/new_item_text"
        android:layout_marginTop="15dp"/>

    <Spinner
        android:id="@+id/status_selector"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:paddingTop="15dp"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/new_item_price"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/another_item_button"
        android:orientation="horizontal"
        android:padding="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/request_payment"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawable = "@drawable/venmo_logo"
            android:contentDescription="venmo_logo"/>

    </LinearLayout>
</RelativeLayout>